<div id="post" class="well">
  <h2 class="post-title"><%= @post.title %></h2>
  <small>Added on <span class="post-added_on"><%= @post.added_on %></span> by <%= link_to @post.user.name, :controller => 'home', :action => 'show_author', :id => @post.user_id %></small>
  <div class="post-tags"><% @post.categories.each do |cat| %><%= link_to cat.name, :controller => 'home', :action => 'show_tags', :id => cat %><% unless cat == @post.categories.last %>, <% end %><% end %></div>
  <div class="post-body"><%= simple_format(@post.body) %></div>
</div></div>

